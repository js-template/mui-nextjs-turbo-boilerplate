{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "dist/types",
    "target": "ESNext", // or "ES6"

    "allowJs": true,
    "strict": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx", // Add or ensure this line is present
    "incremental": true,

    "esModuleInterop": true, // Helps with default imports from CommonJS modules
    "skipLibCheck": true, // Skip type checking of declaration files (declaration: true)

    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["dist", "build", "node_modules"]
}
